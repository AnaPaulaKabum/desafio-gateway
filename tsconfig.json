{
    "compilerOptions": {
        "outDir": "app/dist/js",
        "target": "es2020",
        "noEmitOnError": true,
        "removeComments": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["./*/**.spec.js"]
}
